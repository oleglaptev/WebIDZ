@model WebIDZ.Models.ViewModels.UserVM

@{
    ViewBag.Title = "Вход";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4>@ViewBag.Title</h4>
                </div>
                <div class="card-body text-center">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <!-- Логин -->
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "form-label fw-bold d-block", style = "text-align: center;" }) <!-- Выравниваем текст метки -->
                            @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control mx-auto", placeholder = "Введите логин", style = "display: inline-block; width: 80%;" } }) <!-- Выравниваем поле для ввода -->
                            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger small d-block", style = "text-align: center;" }) <!-- Выравниваем сообщение об ошибке -->
                        </div>

                        <!-- Пароль -->
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label fw-bold d-block", style = "text-align: center;" }) <!-- Выравниваем текст метки -->
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control mx-auto", type = "password", placeholder = "Введите пароль", style = "display: inline-block; width: 80%;" } }) <!-- Выравниваем поле для ввода -->
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger small d-block", style = "text-align: center;" }) <!-- Выравниваем сообщение об ошибке -->
                        </div>

                        <!-- Кнопка Войти -->
                        <div class="form-group">
                            <input type="submit" value="Войти" class="btn btn-success w-75 mx-auto d-block" /> <!-- Делаем кнопку меньше и центрируем -->
                        </div>

                        <!-- Сообщение об ошибке -->
                        if (!String.IsNullOrEmpty(ViewBag.Error))
                        {
                            <div class="alert alert-danger mt-3" role="alert" style="text-align: center;">
                                @ViewBag.Error
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>