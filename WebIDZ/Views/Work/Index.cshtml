@model IEnumerable<WebIDZ.Models.Работа>
@{
    ViewBag.Title = "Список работ";
}
<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Добавить работу", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center fw-bold">
                @Html.DisplayNameFor(model => model.Код_работы)
            </th>
            <th class="text-center fw-bold">
                @Html.DisplayNameFor(model => model.Наименование_работы)
            </th>
            <th class="text-center fw-bold">
                @Html.DisplayNameFor(model => model.Стоимость_работы)
            </th>
            <th class="text-center">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class = "text-center">
                    @Html.DisplayFor(modelItem => item.Код_работы)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Наименование_работы)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Стоимость_работы) ₽
                </td>
                <td class="text-center">
                    <button onclick="location.href='@Url.Action("Edit", new { id = item.Код_работы })'" class="btn btn-primary">Редактировать</button>
                    <button onclick="location.href='@Url.Action("Delete", new { id = item.Код_работы })'" class="btn btn-danger">Удалить</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/bootstrap")
    <style>
        .table th {
            background-color: #f8f9fa;
            text-align: center;
        }

        .table .text-center {
            text-align: center;
        }
    </style>
}